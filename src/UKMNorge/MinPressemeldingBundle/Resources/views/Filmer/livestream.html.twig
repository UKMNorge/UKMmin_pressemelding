{% extends "MinPRBundle::layout.html.twig" %}

{% block content %}
	<h1>Direktesending (livestream)</h1>

	<div class="col-xs-12">	
		{% if embed_code is not empty %}
			<p class="lead">Hvis du ønsker det kan du embedde (bygge inn) direktesendingen på din nettside</p>
			
			<b>Du må:</b>
			<ul>
				<li>registrere inn og betale egen Tono og NCB-avgift for å bygge inn denne på din nettside.</li>
			</ul>
			
			<pre>{{ embed_code }}</pre>
		{% else %}
			<div class="alert alert-danger">Direktesending er dessverre ikke tilgjengelig for innebygging på {{ monstring.getNavn() }}</div>
		{% endif %}
		
		{% if live_link is not empty %}
			<p>
				Direktesending kan ses på denne lenken
				<a href="{{ live_link }}" target="_blank">{{ live_link }}</a> som det kan lenkes til fritt.
			</p>
		{% endif %}
		
		<div class="clearfix"></div>
		<p></p>
		<p>
			<a href="{{ url('min_pr_mypage', {'id': avis.getId() }) }}">Tilbake til ditt nedslagsfelt</a>
		</p>
	</div>
{% endblock %}