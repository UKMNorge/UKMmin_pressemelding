{% for key, name in mediegrupper if innslag.getBilder().getAllFrom(key)|length > 0 %}
	<p class="bold mt-4 mb-1">
		Bilder fra {{ name }}
	</p>
	<p class="mt-0">
		Klikk p√• bilde for info om kreditering og nedlasting.
	</p>
	{% for bilde in innslag.getBilder().getAllFrom(key) %}
		<a href="{{ url('min_pr_bilder', {'avis': avis.getId(), 'id': bilde.getId() }) }}">
			<img class="m-1" src="{{ bilde.getSize('thumbnail').getUrl() }}" />
		</a>
	{% endfor %}
{% else %}
	{% if innslag.getFilmer()|length > 0 %}
		<h4 style="margin-top: 0px;">Bilder</h4>
	{% endif %}
	<p>Vi har ingen bilder av {{ innslag.getNavn() }}</p>
{% endfor %}